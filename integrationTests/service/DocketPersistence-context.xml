<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
        				   http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-4.3.xsd
        				   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd
        				   http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.3.xsd">

	<!-- Hibernate session factory definition that uses annotations in the entities 
		to map to tables/columns. -->


	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
		<property name="url"
			value="jdbc:oracle:thin:@(DESCRIPTION=(ADDRESS_LIST=(ADDRESS=(PROTOCOL=TCP)(HOST=c832qwmdkdbdf.int.thomsonreuters.com)(PORT=1521)))(CONNECT_DATA=(SERVICE_NAME=dockets_dev.int.thomsonreuters.com)))" />
		<property name="username" value="DOCKETS_PUB_USER" />
		<property name="password" value="d0ckets" />
	</bean>
	
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.cache.provider_class">org.hibernate.cache.HashtableCacheProvider</prop>
				<prop key="hibernate.connection.SetBigStringTryClob">true</prop>
                <prop key="hibernate.jdbc.batch_size">0</prop>
			</props>
		</property>
		<property name="annotatedClasses">
			<list>
				<value>com.trgr.dockets.core.entity.Batch</value>
		    	<value>com.trgr.dockets.core.entity.BatchDocket</value>
		    	<value>com.trgr.dockets.core.entity.BatchDroppedDocket</value>
		    	<value>com.trgr.dockets.core.entity.BatchMonitor</value>
				<value> com.trgr.dockets.core.entity.CollectionEntity</value>
		    	<value> com.trgr.dockets.core.entity.Content</value>
		    	<value> com.trgr.dockets.core.entity.ContentVersion</value>
		    	<value> com.trgr.dockets.core.entity.ContentVersionPK</value>
		    	<value> com.trgr.dockets.core.entity.Court</value>
		    	<value> com.trgr.dockets.core.entity.CourtConfig</value>
		    	<value>com.trgr.dockets.core.entity.CaseType</value>
	    		<value>com.trgr.dockets.core.entity.CourtCaseTypeConfig</value>
	    		<value>com.trgr.dockets.core.entity.State</value>
		    	<value> com.trgr.dockets.core.entity.DocketEntity</value>
		    	<value> com.trgr.dockets.core.entity.DocketHistory</value>
		    	<value> com.trgr.dockets.core.entity.DocketVersion</value>
		    	<value> com.trgr.dockets.core.entity.DocketVersionKey</value>
		    	<value> com.trgr.dockets.core.entity.DocketVersionRel</value>
		    	<value> com.trgr.dockets.core.entity.DocketVersionRelHistory</value>
		    	<value>com.trgr.dockets.core.entity.PublishingRequest</value>
		    	<value>com.trgr.dockets.core.entity.Status</value>
		    	<value> com.trgr.dockets.core.entity.Product</value>
		    	<value>com.trgr.dockets.core.entity.County</value>
		    	<value>com.trgr.dockets.core.entity.AcquisitionLookup</value>
		    	<value>com.trgr.dockets.core.entity.DocketHistory</value>
		    	<value>com.trgr.dockets.core.entity.Content</value>
		    	<value>com.trgr.dockets.core.entity.ContentVersion</value>
		    	<value>com.trgr.dockets.core.entity.Process</value>
		    	<value>com.trgr.dockets.core.entity.ProcessType</value>
				<value>com.trgr.dockets.core.entity.AcquisitionStatus</value>
		    	<value>com.trgr.dockets.core.entity.WiplaNovusContent</value>
			</list>
		</property>
	</bean>
	
	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate"
  		  p:dataSource-ref="dataSource"/>

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager"
		p:sessionFactory-ref="sessionFactory" />

	<!-- Enable the configuration of transactional behavior based on @Transactional 
		annotations -->
	<tx:annotation-driven transaction-manager="transactionManager" />

	<bean id="sourceDocketContentServiceImpl" class="com.trgr.dockets.core.content.service.SourceContentServiceImpl">
		<property name="docketService" ref="docketService"/>
		<property name="contentService" ref="contentService"/>
		<property name="contentVersionService" ref="contentVersionService"/>
		<property name="docketEntityServiceImpl" ref="docketEntityService"/>
		<property name="docketHistoryService" ref="docketHistoryService"/>
	</bean>
	<bean id="judicialDocketContentServiceImpl" class="com.trgr.dockets.core.content.service.JudicialContentServiceImpl">
		<constructor-arg ref="docketService"/>
		<constructor-arg ref="contentService"/>
		<constructor-arg ref="contentVersionService"/>
		<constructor-arg ref="docketEntityService"/>
		<constructor-arg ref="docketHistoryService"/>
	</bean>

	<bean id="publishContentService" class="com.trgr.dockets.core.content.service.PublishContentServiceImpl">
		<property name="docketService" ref="docketService"/>
		<property name="contentService" ref="contentService"/>
		<property name="contentVersionService" ref="contentVersionService"/>
		<property name="docketEntityServiceImpl" ref="docketEntityService"/>
		<property name="docketHistoryService" ref="docketHistoryService"/>
	</bean>
		
		<bean id="docketService" class="com.trgr.dockets.core.service.DocketServiceImpl">
		<constructor-arg ref="docketDao"/>
		<constructor-arg><null/></constructor-arg>
	</bean>
	
	<bean id="testService" class="com.trgr.dockets.core.service.TestServiceImpl">
		<constructor-arg ref="testDocketDao"/>
	</bean>
	
	<bean id="testContentVersionService" class="com.trgr.dockets.core.service.TestContentVersionServiceImpl">
		<constructor-arg ref="contentVersionService"/>
		<constructor-arg ref="testContentVersionDao"/>
	</bean>
	
	<bean id="testDocketDao" class="com.trgr.dockets.core.dao.TestDocketDaoImpl">
		<constructor-arg ref="sessionFactory"/>
	</bean>
	
	<bean id="testContentVersionDao" class="com.trgr.dockets.core.dao.TestContentVersionDaoImpl">
		<constructor-arg ref="sessionFactory"/>
	</bean>
	
	<bean id="docketDao" class="com.trgr.dockets.core.dao.DocketDaoImpl">
		<constructor-arg ref="sessionFactory"/>
		<constructor-arg ref="jdbcTemplate"/>
	</bean>
	
	<bean id="contentService" class="com.trgr.dockets.core.service.ContentServiceImpl">
		<property name="contentDao" ref="contentDao"/>
	</bean>
		
	<bean id="contentDao" class="com.trgr.dockets.core.dao.ContentDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>	
	
	<bean id="contentVersionService" class="com.trgr.dockets.core.service.ContentVersionServiceImpl">
		<property name="contentVersionDao" ref="contentVersionDao"/>
	</bean>
		
	<bean id="contentVersionDao" class="com.trgr.dockets.core.dao.ContentVersionDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>	

	<bean id="docketEntityService" class="com.trgr.dockets.core.service.DocketEntityServiceImpl">
		<property name="docketEntityDao" ref="docketEntityDao"/>
	</bean>
		
	<bean id="docketEntityDao" class="com.trgr.dockets.core.dao.DocketEntityDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	
	<bean id="docketHistoryService" class="com.trgr.dockets.core.service.DocketHistoryServiceImpl">
		<constructor-arg ref="docketHistoryDao"/>
	</bean>
		
	<bean id="docketHistoryDao" class="com.trgr.dockets.core.dao.DocketHistoryDaoImpl">
		<constructor-arg ref="sessionFactory"/>
	</bean>	
	
	<bean id="processAdapter" class="com.trgr.dockets.core.service.ProcessAdapterImpl">
		<constructor-arg ref="docketService"/>
	</bean>
	
	<bean id="countyDao" class="com.trgr.dockets.core.dao.CountyDAOImpl">
		<constructor-arg ref="sessionFactory"/>
	</bean>	
	
	<bean id="countyService" class="com.trgr.dockets.core.service.CountyServiceImpl">
		<property name="countyDAO" ref="countyDao"/>
	</bean>
	
	<bean id="notificationDao" class="com.trgr.dockets.core.dao.NotificationDaoImpl">
		<constructor-arg ref="sessionFactory"/>
		<constructor-arg ref="jdbcTemplate"/>
	</bean>		
	
	<bean id="docGrabberMonitorDao" class="com.trgr.dockets.core.dao.DocGrabberMonitorDaoImpl">
		<constructor-arg ref="sessionFactory"/>
		<constructor-arg ref="jdbcTemplate"/>
	</bean>		
	
	<bean id="processDao" class="com.trgr.dockets.core.dao.ProcessDaoImpl">
		<constructor-arg ref="sessionFactory"/>
	</bean>	
	
	<bean id="preDocketContentService" class="com.trgr.dockets.core.content.service.PreDocketContentServiceImpl">
		<property name="docketService" ref="docketService"/>
		<property name="contentService" ref="contentService"/>
		<property name="contentVersionService" ref="contentVersionService"/>
		<property name="docketEntityServiceImpl" ref="docketEntityService"/>
		<property name="docketHistoryService" ref="docketHistoryService"/>
	</bean>
	
	<bean id="notificationService" 
		class="com.trgr.dockets.core.service.NotificationServiceImpl">
		<constructor-arg ref="notificationDao"/>
		<constructor-arg ref="processDao"/>
	</bean>	
	
	<bean id="docGrabberMonitorService" 
		class="com.trgr.dockets.core.service.DocGrabberMonitorServiceImpl">
		<constructor-arg ref="docGrabberMonitorDao"/>
	</bean>	
	
	
	<bean id="failedAcquisitionDocketContentService" class="com.trgr.dockets.core.content.service.FailedAcquisitionDocketContentServiceImpl">
		<property name="docketService" ref="docketService"/>
		<property name="contentService" ref="contentService"/>
		<property name="contentVersionService" ref="contentVersionService"/>
		<property name="docketEntityServiceImpl" ref="docketEntityService"/>
		<property name="docketHistoryService" ref="docketHistoryService"/>
	</bean>	
	
	<bean id="acquisitionRecordAndActivitySetService" class="com.trgr.dockets.core.acquisition.service.AcquisitionRecordAndActivitySetServiceImpl">
		<property name="docketService" ref="docketService"/>
		<property name="processAdapter" ref="processAdapter"/>
		<property name="countyService" ref="countyService"/>
		<property name="sendEmailFlag" value="false"/>
		<property name="preDocketContentService" ref="preDocketContentService"/>
		<property name="failedAcquisitionDocketContentService" ref="failedAcquisitionDocketContentService"/>
		<property name="notificationService" ref="notificationService"/>
		<property name="docGrabberMonitorService" ref="docGrabberMonitorService"/>
	</bean>
	
	
  		    
</beans>
